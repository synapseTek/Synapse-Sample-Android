<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimary">@color/notification_blue</item>
        <item name="android:colorPrimaryDark">@color/notification_blue_border</item>
        <item name="android:colorAccent">@color/primary</item>
    </style>


    <!-- no action bar theme -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>

    </style>


    
    <!-- testi misura piccola -->
    <style name="text_small_size">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- testi misura media -->
    <style name="text_mid_size">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- testi misura grande -->
    <style name="text_big_size">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!-- testi misura grandissima -->
    <style name="text_verybig_size">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- barra icone di pagina <item name="android:id">@id/title_bar</item>-->
    <style name="style_section_title_bar">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent_white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
    </style>



    <style name="btn_shadow">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="survey">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>